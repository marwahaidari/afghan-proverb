<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>All Proverbs</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light py-4">
  <div class="container" style="max-width: 800px;">

    <h1 class="text-center mb-4">üìú Afghan Proverbs</h1>

    <!-- Search Form -->
    <form action="/search" method="GET" class="d-flex mb-4 gap-2">
      <input type="text" name="q" class="form-control shadow-sm" placeholder="Search by ID..." />
      <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>

    <!-- Message (Not Found) -->
    <% if (typeof message !=='undefined' ) { %>
      <div class="alert alert-warning text-center">
        <%= message %>
      </div>
      <% } %>

        <!-- Back Button -->
        <% if (typeof showBack !=='undefined' && showBack) { %>
          <div class="mb-3 text-center">
            <a href="/" class="btn btn-secondary">‚Üê Back to All Proverbs</a>
          </div>
          <% } %>

            <!-- Add New Post -->
            <div class="text-end mb-4">
              <a href="/post/new" class="btn btn-success">‚ûï Add New Post</a>
            </div>

            <!-- Proverbs List -->
            <div class="d-flex flex-column gap-4">
              <% posts.forEach(post=> { %>
                <div class="card">
                  <div class="card-body position-relative">

                    <form action="/post/<%= post.id %>/delete" method="POST" class="position-absolute top-0 end-0 m-2"
                      onsubmit="return confirm('Are you sure you want to delete this proverb?');">
                      <button class="btn btn-sm btn-danger">‚úñ</button>
                    </form>


                    <h5 class="card-title fw-semibold mb-3">
                      <%= post.translationEn %>
                    </h5>

                    <p class="mb-1"><strong>Dari:</strong>
                      <%= post.textDari %>
                    </p>
                    <p class="mb-1"><strong>Pashto:</strong>
                      <%= post.textPashto %>
                    </p>
                    <p class="mb-2"><strong>Meaning:</strong>
                      <%= post.meaning %>
                    </p>
                    <div class="text-muted mb-3">Category: <%= post.category %>
                    </div>

                    <a href="/post/<%= post.id %>" class="btn btn-outline-primary btn-sm">View Details</a>

                  </div>
                </div>
                <% }); %>
            </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>